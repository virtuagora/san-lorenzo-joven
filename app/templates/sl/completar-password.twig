{% extends 'master.twig' %}

{% block title %}Reiniciar contrase√±a{% endblock %}
{% block body %}
  <div class="hero is-white is-fullheight is-login-window">
    <div class="hero-body has-text-centered">
      <div class="container">
        <div class="columns">
          <div class="column is-6-tablet is-offset-3-tablet is-4-desktop is-offset-4-desktop">
            <img src="{{asset('img/logo-sl.svg')}}" class="image login-logo" alt="">
            {% if error %}
              <div class="notification is-warning">
                {{ error }}
              </div>
            {% endif %}
            <br>
            <completar-reset-password reset-url="{{ path_for('runRestorePassword',{'usr':user}) }}" log-in-url="{{path_for('showLogin')}}" token="{{activation_key}}">
              {% include 'loading.twig' %}
            </completar-reset-password>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

