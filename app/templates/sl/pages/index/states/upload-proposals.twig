{% else %}
	{% if is_state('upload-proposals') and 'user' in subject.roles %}
	<section class="section">
		<div class="container">
			<h1 class="title is-3 is-size-4-touch has-text-primary"><i class="fas fa-sticky-note"></i>&nbsp;Mis propuestas subidas</h1>
			<h1 class="subtitle is-4 is-size-5-touch">Aquí están tus propuestas subidas para el Presupuesto Participativo Joven del {{options()['current-edition']}}</h1>
				<project-carousel url="{{path_for('retrieveProject')}}" :timeout="7400" author="{{subject.extra.user_id}}">
						{% include 'loading.twig' %}
				</project-carousel>
				{% if proposals_available() %}
				<br>
				<a class="button is-primary" href="{{path_for('showUserPanelCreateProject')}}">
					<i class="fas fa-plus-square fa-fw fa-lg"></i>&nbsp;Subí tu propuesta</a>
				{% endif %}
		</div>
	</section>
	{% endif %}
{% endif %}
